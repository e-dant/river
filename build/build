#!/usr/bin/env bash

build::build() {
  local ok;
  local lastdir="$PWD"
  cd "$(dirname "$0")"
  local thisdir="$PWD"
  local llvm_version=15

  cc::init() {
    local ok;
    local llvm_dir="$thisdir/../../../tool/compilers/llvm"
    if test -n "$CC" -a -n "$CXX"
    then
      ok=0
    elif test -d "$llvm_dir"
    then
      if ! test -x "$llvm_dir/build/out/$llvm_version/bin/clang"
      then
        "$llvm_dir/tool/version/set" $llvm_version
        "$llvm_dir/build/build"
        ok=$?
      fi
      export CC="$llvm_dir/build/out/$llvm_version/bin/clang"
      export CXX="$llvm_dir/build/out/$llvm_version/bin/clang++"
    else
      export CC="$(which clang)"
      export CXX="$(which clang++)"
    fi
    return $ok
  }

  cmake::build() {
    cmake -S 'in' -B 'out' -G 'Ninja' -Wno-dev \
      && cmake --build out --config Release
    return $?
  }

  compdb::ln() {
    local from="$PWD/out/compile_commands.json"
    local to='../'
    ln -sf "$from" "$to"
    return $?
  }

  cc::init \
    && cmake::build \
    && compdb::ln

  ok=$?

  cd "$lastdir"
  return $ok
}

build::build

exit $?
